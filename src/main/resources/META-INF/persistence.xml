<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="myPU">

        <class>com.hb.cda.projetorm.entity.Subject</class>
        <class>com.hb.cda.projetorm.entity.Project</class>
        <class>com.hb.cda.projetorm.entity.Role</class>
        <class>com.hb.cda.projetorm.entity.User</class>
        <class>com.hb.cda.projetorm.entity.Developer</class>
        <class>com.hb.cda.projetorm.entity.ProjectLeader</class>
        <class>com.hb.cda.projetorm.entity.Hardskill</class>
        <class>com.hb.cda.projetorm.entity.ProjectApplicationId</class>
        <class>com.hb.cda.projetorm.entity.ProjectApplication</class>

        <properties>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/project_orm?createDatabaseIfNotExist=true"/>
            <property name="jakarta.persistence.jdbc.user" value=""/>
            <property name="jakarta.persistence.jdbc.password" value=""/>
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>

            <property  name="hibernate.hbm2ddl.auto" value="create" />
            <property name="hibernate.show_sql" value="true"/>
        </properties>
    </persistence-unit>


</persistence>